prototype(Plyr:Vimeo) < prototype(Content) {
	templatePath = 'resource://Jonnitto.Plyr/Private/Templates/NodeTypes/Vimeo.html'

	attributes.class = Fusion:RawArray {
		plyrContainer = 'jonnitto-plyr-container'
		container = ${Configuration.setting('Jonnitto.Plyr.container')}
	}

	@context.id = Plyr:ParseID

	videoAttributes = Fusion:Attributes {
		class = Fusion:RawArray {
			player = 'neos-plyr'
		}
		data-type = 'vimeo'
		data-video-id = ${id}
	}

	render = ${id || node.context.inBackend}
	backendAlert = ${id ? false : Translation.translate('backendAlert.vimeo', null, [], null, 'Jonnitto.Plyr')}
}
