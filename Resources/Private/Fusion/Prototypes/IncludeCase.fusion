prototype(Jonnitto.Plyr:IncludeCase) <  prototype(Neos.Fusion:Value) {
    settings = ${Configuration.setting('Jonnitto.Plyr')}
    @context.settings = ${this.settings}

    value = Carbon.Condition:Case {
        context.live = ${settings.alwaysInclude}

        content {
            collection = ${settings.selector.collection}
            filter = ${settings.selector.content}
        }

        document.filter = ${settings.selector.onDocument}
    }
}
